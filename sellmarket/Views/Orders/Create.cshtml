<div class="card">
    <p class="text-dark">بلافاصله بعد از اطلاع از سفارش کارشناس فروش برنج و چای با شما تماس گرفته خواهد شد</p>
</div>
*@

        <div style="padding: 50px;">
            @using (Html.BeginForm())
            {
                <div class="container">
                    @Html.HiddenFor(m => m.IsSample, (bool) ViewBag.isSample)
                    @Html.HiddenFor(m => m.ProductName, (string) ViewBag.productName)

                    <div class="form-group fileup">
                        <label>انتخاب محصول</label>
                        <input class="form-control" type="text" disabled="disabled" readonly="readonly" value="@ViewBag.productName"/>
                    </div>
                  
                    <div class="form-group fileup">
                        <label style=" direction: rtl !important;">شماره تماس با شما (این فیلد لازم است)</label>
                        @Html.TextBoxFor(m => m.Tel1, new {@class = "form-control", @required = "required"})
                    </div>
                    <div class="form-group fileup">
                        <label style=" direction: rtl !important;">ایمیل(اگر دارید)</label>
                        @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                    </div>

                    <div class="form-group fileup">
                        <label>توضیحات </label>
                        @Html.TextAreaFor(m => m.Description, new {@class = "form-control"})
                    </div>


                    <div class="form-group fileup">
                        <button class="btn btn-primary" type="submit">ثبت </button>
                    </div>


                </div>
            }
        </div>
    </div>
</div>