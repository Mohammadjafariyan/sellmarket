@model sellmarket.Models.Order

@{
    ViewBag.Title = "title";
    Layout = "../Shared/_Layout.cshtml";
}

<style>
    label{
    text-align: right;
    direction: rtl !important;
    }
</style>


<div class="container" style="margin-top: 100px;margin-bottom: 50px;">
    <div class="card">
        <div class="card-header bg-light">
            @{
                if (ViewBag.isSample)
                {
                    <h4>سفارش خرید</h4>
                }
                else
                {
                    <h4>سفارش نمونه</h4>
                }
            }
        </div>

